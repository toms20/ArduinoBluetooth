<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_discoverDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnDiscoverText" />

    <TextView
        android:id="@+id/txt_knownDevicesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Known Devices"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_knownDevicesList"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:visibility="gone" >

    </ListView>

    <TextView
        android:id="@+id/txt_discoveredDevicesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discovered Devices"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_discoveredDevicesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

    </ListView>

</LinearLayout>